<Window x:Class="_4_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btn" Content="Button" HorizontalAlignment="Left" Height="23" Margin="286,217,0,0" VerticalAlignment="Top" Width="63" Click="Button_Click"/>
        <TextBox x:Name="txt" HorizontalAlignment="Left" Height="72" Margin="270,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Text="{Binding Text, Mode = TwoWay, UpdateSourceTrigger = PropertyChanged}" />

    </Grid>
</Window>
